<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Chatbot.Chatbot_01_Activity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="당신의 식물을 위해 제가 도와드릴게요!\n\n저에게 궁금한 것을 물어보세요!\n"
        android:gravity="center"
        android:fontFamily="@font/call"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/chatbot"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="397dp"
        android:layout_height="52dp"
        android:text="궁금한 내용의 키워드를 입력해주세요."
        android:textSize="13dp"
        android:fontFamily="@font/call"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/chatbot1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_pink"
        android:fontFamily="@font/call"
        android:textColor="#ffffff"
        android:text="채팅하러 가기"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/call"
        android:text="아니요. 괜찮아요"
        android:textSize="15dp"
        android:textColor="#5d5d5d"
        android:gravity="center"
        android:background="@drawable/button_solidpink"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/chatbot1" />
    </LinearLayout>
</LinearLayout>
