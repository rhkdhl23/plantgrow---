<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/back"
        android:id="@+id/button_back_bean" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_pink_1">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bean" />

        <!--       콩나물 사진 넣기-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ 콩나물 ]"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="#Ffffff"
                    />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="콩에서 나물로 일주일의 기적 "
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#Ffffff" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 원산지 : 한국 \n- 생육온도 : 약 20℃
        \n- 키우기쉬운정도 : ★★★★★"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/call"
                android:textColor="#Ffffff"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ -->
    <!-- ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ -->

    <ScrollView
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/basic"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <!-- ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물 주기"
                    android:textSize="15dp"
                    android:fontFamily="@font/call"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/btn_pink_1"
                    android:layout_gravity="center"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/line_back1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white"
                    android:padding="10dp"
                    android:gravity="center"
                    android:backgroundTint="#D4F4FA">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="@font/call"
                        android:text="콩나물은 자라는데 가장 중요한 것은 물입니다!\
\n적어도 하루에 4시간정도 간격으로 물을 주어야지 콩나물이 쑥쑥 자라요 : )" />
                </LinearLayout>
            </LinearLayout>

            <!-- ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ -->

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eaeaea"
                android:orientation="vertical" />

            <!-- ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키우기 좋은 장소"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/call"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/btn_pink_1"
                    android:layout_gravity="center"
                    tools:ignore="MissingConstraints" />


                <LinearLayout
                    android:id="@+id/line_back2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white"
                    android:padding="10dp"
                    android:gravity="center"
                    android:backgroundTint="#D4F4FA">

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:gravity="center"
                        android:text="장소는 따로 없습니다!\n불린콩을 그릇에 담고 검은 천을 덮기 때문에 장소에 크게 신경쓰지 않아도 됩니다!"
                        android:textAlignment="center"
                        android:fontFamily="@font/call"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:orientation="vertical"/>
                </LinearLayout>
            </LinearLayout>
            <!-- ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ -->

            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eaeaea"
                android:orientation="vertical" />

            <!-- ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타 정보"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:fontFamily="@font/call"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/btn_pink_1"
                    android:layout_gravity="center"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/line_back3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white"
                    android:padding="10dp"
                    android:gravity="center"
                    android:backgroundTint="#D4F4FA">

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/call"
                        android:textStyle="bold"
                        android:text="&#160; &#160;&#160;콩나물이 튼실하게 재배하기 위해선 온도 및 수온도가 중요해요!
\n온도와 수온을 각각 20℃안팎으로 균일하게 유지헤주는 것이 좋아요!"
                        android:textAlignment="center"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>